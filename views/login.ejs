<% include partials/top %>

<div class="container">

  <h1 class="text-center">Login</h1>

  <form class="form mb-2" action="/login" method="POST">
    
    <div class="form-group">  
      <label for="email">Email Address</label>
      <input class="form-control" type="email" name="email" placeholder="Email Address..." autocomplete="email" min="8" max="100" required>
    </div>

    <div class="form-group">  
      <label for="password">Password</label>
      <input class="form-control" type="password" name="password" placeholder="Password..." autocomplete="password" min="8" max="100" required>
    </div>

    <button class="btn btn-outline-dark btn-block">Login</button>

  </form>

</div>

